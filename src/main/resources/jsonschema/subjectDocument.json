{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "doc_id": {
      "type": "string"
    },
    "doc_type": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "name": {
          "type": "string"
        },
        "size": {
          "type": "number"
        },
        "filename": {
          "type": "string"
        },
        "content-type": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "doc_id",
    "metadata"
  ]
}


